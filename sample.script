# Animate a pulsing rainbow
h = 0

# Fade to full brightness
for b in 0..255 {
  h = (h + 7) % 0x600
  for c in 0..15 {
    write(c, mix(0, hue(h + c * 47), b))
  }
  update()
  delay(16)
}

# Fade back down...
for b in 255..0 {
  h = (h + 7) % 0x600
  for c in 0..15 {
    write(c, mix(0, hue(h + c * 47), b))
  }
  update()
  delay(16)
}
